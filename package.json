{
    "name": "activecaptain-webview",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@emotion/react": "^11.4.1",
        "@emotion/styled": "^11.3.0",
        "@mui/icons-material": "5.5.1",
        "@mui/material": "5.0.1",
        "@mui/styles": "5.0.1",
        "@reduxjs/toolkit": "1.8.1",
        "axios": "^0.21.1",
        "leaflet": "^1.7.1",
        "qs": "^6.10.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-leaflet": "^3.2.0",
        "react-leaflet-google-layer": "^2.0.4",
        "react-redux": "7.2.8",
        "react-router-dom": "^5.2.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@types/jest": "^26.0.24",
        "@types/leaflet": "^1.7.3",
        "@types/node": "^14.14.31",
        "@types/qs": "^6.9.7",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-jest-dom": "^3.6.5",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-testing-library": "^3.10.2",
        "prettier": "^2.2.1",
        "react-scripts": "4.0.3",
        "typescript": "^4.3.5"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not op_mini all"
    ],
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*Styles.tsx",
            "!src/**/__tests__/**/*.fixture.ts",
            "!src/**/*.d.ts",
            "!src/styles/**/*.{ts,tsx}",
            "!src/api/**/*.{ts,tsx}",
            "!src/types/**/*.{ts,tsx}",
            "!src/testUtil.tsx",
            "!src/components/ActiveCaptainLogo.tsx"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 55,
                "branches": 45,
                "functions": 50,
                "lines": 55
            }
        },
        "testMatch": [
            "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
        ],
        "coverageReporters": [
            "text",
            "lcov"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!(react-leaflet|@react-leaflet)/)"
        ]
    }
}
